<mvc:View controllerName="com.lab2dev.thirdapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>
        <List headerText="Products" headerLevel="H1" items="{products>/}" id="list1">
            <!-- <StandardListItem 
                              type="Active"
                              press="onPress"
                              title="{products>title}"
                              counter="{products>counter}"
                              id="listitem1" /> -->

                              <ObjectListItem 
                              title="{Products>ProductName}"
                              number="{Products>UnitPrice}"
                              numberUnit="USD"
                              id="objlistitm1"
                              >
                              <firstStatus>
                              <ObjectStatus 
                              text="{products>Discontinued}"
                              state="Success"
                              id="objstt1"
                              />
                              </firstStatus>
                              <ObjectAttribute  text="{Products>UnitsInStock} in Stock" id="objatrib1" />
                              <ObjectAttribute  text="{Products>QuantityPerUnit}" id="objatrib2" />
                              </ObjectListItem>
        </List>
        </content>
    </Page>
</mvc:View>
